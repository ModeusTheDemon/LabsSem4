<Window x:Class="StudentApp.AddStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить студента" Height="400" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Фамилия" />
            <TextBox x:Name="LastNameBox" Margin="0,0,0,5" />

            <TextBlock Text="Имя" />
            <TextBox x:Name="FirstNameBox" Margin="0,0,0,5" />

            <TextBlock Text="Отчество" />
            <TextBox x:Name="PatronymicBox" Margin="0,0,0,5" />

            <TextBlock Text="Дата рождения" />
            <DatePicker x:Name="BirthDatePicker" Margin="0,0,0,5" />

            <TextBlock Text="Рост (м)" />
            <TextBox x:Name="HeightBox" Margin="0,0,0,5" />

            <TextBlock Text="Город" />
            <ComboBox x:Name="CityBox" Margin="0,0,0,5">
                <ComboBoxItem Content="Москва"/>
                <ComboBoxItem Content="Санкт-Петербург"/>
                <ComboBoxItem Content="Казань"/>
                <ComboBoxItem Content="Новосибирск"/>
                <ComboBoxItem Content="Екатеринбург"/>
            </ComboBox>

            <TextBlock Text="Телефон (+7 XXX XXX-XX-XX)" />
            <TextBox x:Name="PhoneBox" Margin="0,0,0,10" />

            <Button Content="Добавить" Click="AddButton_Click" />
        </StackPanel>
    </Grid>
</Window>