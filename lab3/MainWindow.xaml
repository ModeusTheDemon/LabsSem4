<Window x:Class="Lab3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Лабораторная работа №3" Height="300" Width="400" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="PointLabel" Content="+" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,100,0,0"/>
        <Button x:Name="UpButton" Content="ВВЕРХ" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,50,0,0" Width="75" Click="UpButton_Click"/>
        <Button x:Name="DownButton" Content="ВНИЗ" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,150,0,0" Width="75" Click="DownButton_Click"/>
        <Button x:Name="LeftButton" Content="ВЛЕВО" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,100,0,0" Width="75" Click="LeftButton_Click"/>
        <Button x:Name="RightButton" Content="ВПРАВО" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,100,0,0" Width="75" Click="RightButton_Click"/>
        <Button x:Name="InfoButton" Content="ИНФО" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,100,0,0" Width="75" Click="InfoButton_Click"/>
    </Grid>
</Window>