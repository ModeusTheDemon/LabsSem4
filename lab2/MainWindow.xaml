<Window x:Class="Lab2_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Бондаренко Ярослав 2МО" Height="350" Width="400"
        MouseDown="Window_MouseDown">
    <Grid>
        <!-- Счётчик -->
        <Label x:Name="CounterLabel" 
               Content="Счётчик: 0" 
               FontSize="16" 
               FontWeight="Bold" 
               Foreground="DarkBlue" 
               HorizontalAlignment="Left" 
               VerticalAlignment="Top" 
               Margin="10,10,0,0"/>

        <!-- Дополнительные метки -->
        <Label Content="Температура:" 
               FontSize="14" 
               FontStyle="Italic" 
               Foreground="DarkRed" 
               HorizontalAlignment="Left" 
               VerticalAlignment="Top" 
               Margin="10,50,0,0"/>

        <Label Content="Давление:" 
               FontSize="14" 
               FontWeight="SemiBold" 
               Foreground="DarkGreen" 
               HorizontalAlignment="Left" 
               VerticalAlignment="Top" 
               Margin="10,80,0,0"/>

        <Label Content="Скорость:" 
               FontSize="14" 
               Foreground="DarkOrange" 
               HorizontalAlignment="Left" 
               VerticalAlignment="Top" 
               Margin="10,110,0,0"/>
    </Grid>
</Window>