<Window x:Class="Lab3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Лабораторная работа №3" Height="450" Width="700" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="PointLabel" Content="+" FontSize="80" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="148,200,0,0"/>
        <Button x:Name="UpButton" Content="ВВЕРХ" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="500,-100,0,0" Width="75" Click="UpButton_Click"/>
        <Button x:Name="DownButton" Content="ВНИЗ" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="500,100,0,0" Width="75" Click="DownButton_Click"/>
        <Button x:Name="LeftButton" Content="ВЛЕВО" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="400,0,0,0" Width="75" Click="LeftButton_Click"/>
        <Button x:Name="RightButton" Content="ВПРАВО" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="600,0,0,0" Width="75" Click="RightButton_Click"/>
        <Button x:Name="InfoButton" Content="ИНФО" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="500,0,0,0" Width="75" Click="InfoButton_Click"/>
    </Grid>
</Window>